exe-clang: main.noInstrumentation.bc
#ifneq ($(LANGUAGE),C)
	$(CCPP) $(OPT_LEVEL) $(LD_NO_OPT) $(LDFLAGS) main.noInstrumentation.bc -o exe-clang
#else
